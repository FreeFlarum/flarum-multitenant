{
  "name": "tank/perspective",
  "description": "Stop toxicity with perspective API.",
  "type": "flarum-extension",
  "keywords": ["moderation"],
  "license": "MIT",
  "authors": [
    {
      "name": "Matthew Kilgore",
      "email": "matthew@kilgore.dev"
    }
  ],
  "support": {
    "issues": "https://github.com/tankerkiller125/flarum-perspective/issues",
    "source": "https://github.com/tankerkiller125/flarum-perspective"
  },
  "require": {
    "flarum/core": ">=0.1.0-beta.12 <0.1.0-beta.14",
    "flarum/approval": "^0.1.0-beta.8",
    "flarum/flags": "^0.1.0-beta.9",
    "stajor/perspectiveapi": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "Tank\\Perspective\\": "src/"
    }
  },
  "extra": {
    "branch-alias": {
      "dev-master": "0.1.x-dev"
    },
    "flarum-extension": {
      "title": "Perspective",
      "icon": {
        "image": "icon.png",
        "backgroundSize": "80% 80%",
        "backgroundPosition": "center",
        "backgroundRepeat": "no-repeat",
        "backgroundColor": "#fffbf0",
        "color": "#fff"
      }
    }
  },
  "minimum-stability": "beta"
}
