{
    "name": "clarkwinkelmann/flarum-ext-money-rewards",
    "description": "Transfer money to other users through post rewards",
    "keywords": [
        "flarum",
        "money"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "require": {
        "flarum/core": "^1.2",
        "antoinefr/flarum-ext-money": "*"
    },
    "authors": [
        {
            "name": "Clark Winkelmann",
            "homepage": "https://clarkwinkelmann.com/",
            "email": "clark.winkelmann@gmail.com",
            "role": "Developer"
        }
    ],
    "support": {
        "source": "https://github.com/clarkwinkelmann/flarum-ext-money-rewards"
    },
    "autoload": {
        "psr-4": {
            "ClarkWinkelmann\\MoneyRewards\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Money Rewards",
            "category": "feature",
            "icon": {
                "name": "fas fa-money-bill",
                "backgroundColor": "#684ba6",
                "color": "#fff"
            }
        }
    }
}
