{
  "name": "askvortsov/flarum-checklist",
  "description": "Checklists for Flarum!",
  "keywords": [
    "flarum"
  ],
  "type": "flarum-extension",
  "license": "MIT",
  "support": {
    "issues": "https://github.com/askvortsov1/flarum-checklist/issues",
    "source": "https://github.com/askvortsov1/flarum-checklist",
    "forum": "https://discuss.flarum.org/d/26457-checklists"
  },
  "require": {
    "flarum/core": "^1.0.0",
    "flarum/markdown": "^1.0.0"
  },
  "authors": [
    {
      "name": "Alexander Skvortsov",
      "email": "askvortsov@flarum.org",
      "role": "Developer"
    }
  ],
  "autoload": {
    "psr-4": {
      "Askvortsov\\FlarumChecklist\\": "src/"
    }
  },
  "extra": {
    "flarum-extension": {
      "title": "Checklists",
      "category": "feature",
      "icon": {
        "name": "far fa-check-square",
        "backgroundColor": "#6932D1",
        "color": "#fff"
      },
      "optionalDependencies": [
        "flarum/bbcode"
      ]
    }
  }
}
