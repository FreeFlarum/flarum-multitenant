{
    "name": "reflar/twofactor",
    "description": "Add factor authentication to Flarum",
    "type": "flarum-extension",
    "keywords": ["twofactor"],
    "license": "MIT",
    "authors": [
        {
            "name": "Charlie K",
            "email": "CDk2020@redevs.org"
        }
    ],
    "support": {
        "issues": "https://gitlab.com/ReDevelopers/ReFlar/twofactor/issues",
        "source": "https://gitlab.com/ReDevelopers/ReFlar/twofactor"
    },
    "require": {
        "flarum/core": "^0.1.0-beta.8",
        "pragmarx/google2fa": "^3.0.1 ",
        "twilio/sdk": "^5.16.7",
        "authy/php": "^3.0"
    },
    "conflict": {
        "issyrocks12/flarum-ext-twofactor": "1.0.*"
    },
    "autoload": {
        "psr-4": {
            "Reflar\\twofactor\\": "src/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.1.x-dev"
        },
        "flarum-extension": {
            "title": "ReFlar Two Factor",
            "icon": {
                "image": "resources/icon.png",
                "backgroundColor": "#263238",
                "backgroundSize": "70%",
                "backgroundRepeat": "no-repeat",
                "backgroundPosition": "center",
                "color": "#fff"
            }
        }
    }
}
